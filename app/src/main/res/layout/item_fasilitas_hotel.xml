<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginBottom="7dp"
    android:background="@drawable/shape_text_detail_3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="id"
        android:visibility="gone"
        android:id="@+id/idFHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="jenisFasilitas"
        android:layout_alignParentRight="true"
        android:id="@+id/jenisFasilitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="namaFasilitas"
        android:id="@+id/namaFasilitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginRight="4dp"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@id/jamBuka"
        android:layout_below="@id/namaFasilitas"
        android:text="Jam Buka :"
        android:id="@+id/jam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/namaFasilitas"
        android:text="jamBuka"
        android:id="@+id/jamBuka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/jenisFasilitas"
        android:layout_alignParentRight="true"
        android:text="keteranganHotel"
        android:id="@+id/keteranganHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>